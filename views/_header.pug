header.header 
    // nav con dos clases
    nav.nav.nav--tours 
        a.nav__el(href='/') All tours
    .header__logo 
        img(src='/img/logo.png', alt='Logo de la empresa MCS Tours')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}`, alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/signup') Sign in 
